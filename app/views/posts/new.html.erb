<section>
    <p>Create a new Post:</p>
    <%= form_with model: @post, url: user_posts_path do |form| %>
        <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
        </div>
        <div>
        <%= form.label :text %>
        <%= form.text_area :text %>
        </div>
        <br/><br/>
        <div>
        <%= form.submit 'Submit' %>
        </div>
    <% end %>
</section>